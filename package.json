{
    "name": "banana",
    "displayName": "香蕉君鼓励师",
    "description": "写代码不再孤单，有香蕉君与你同在",
    "version": "0.0.1",
    "publisher": "lamguo",
    "icon": "logo.jpg",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "香蕉君",
        "提醒",
        "鼓励"
    ],
    "bugs": {
        "url": "https://github.com/formulahendry/vscode-banana/issues",
        "email": "formulahendry@gmail.com"
    },
    "homepage": "https://github.com/formulahendry/vscode-banana/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/formulahendry/vscode-banana.git"
    },
    "activationEvents": [
        "onCommand:banana.showReminderView",
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "banana.showReminderView",
                "title": "打开提醒页面",
                "category": "banana"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "香蕉君",
            "properties": {
                "banana.reminderViewIntervalInMinutes": {
                    "type": "number",
                    "default": 60,
                    "description": "展示提醒页面的时间间隔（分钟）"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
